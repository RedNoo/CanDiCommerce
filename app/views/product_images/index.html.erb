<p id="notice"><%= notice %></p>

<h1>Product Images</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Image</th>
      <th>Product Name</th>
      <th>Order no</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @product_images.each do |product_image| %>
      <tr>
        <td>        <% unless product_image.data.nil? %>
                <%= ('<img class="img-fluid"  style="width:100px;" src="data:product_image.mime_type;base64,%s">' % Base64.encode64(product_image.data)).html_safe %>
                <% end %></td>
        <td><%= product_image.product.title %></td>
        <td><%= product_image.order_no %></td>
        <td><%= link_to 'Show', product_image %></td>
        <td><%= link_to 'Edit', edit_product_image_path(product_image) %></td>
        <td><%= link_to 'Destroy', product_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product Image', add_new_product_image_path(@product) %>
